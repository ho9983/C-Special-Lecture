#include <stdio.h>
#include <stdlib.h>

// 함수 프로토타입 예시 
// http://deu-sogong.blogspot.kr/2016/ 참고 

int add(int x);
double half(int x);
 
int main(int argc, char *argv[]) {
	int num;
	
	printf("정수를 하나 입력하세요 : ");
	scanf("%d", &num);
	
	printf("\n%d의 바로 다음 정수는 %d 이고\n", num, add1(num));
	printf("%d 의 반은 %.1f 입니다.\n", num, half(num));
		
	return 0;
}

int add1(int x){
	return (x + 1);
}
double half(int x) {
	return (x / 2.0);
}
